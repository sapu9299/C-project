@*@model IEnumerable<OnlineShop.Entity.Models.Product>*@
@model OnlineShop.Entity.Models.Product
@{
    ViewData["Title"] = "Product details";
    string imageBase64Data = Convert.ToBase64String(Model.ImgPoster);
    string imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);
}

<div class="row">
    
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.ProductName

                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    
                    <img src="@imageDataURL" width="100%" height="200" alt="@Model.ProductName">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.LongDescription</p>
                       
                        
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Back to List
                            </a>
                            @*<a class="btn btn-success text-white  @((DateTime.Now > Model.EndDate) ? "disabled" : "")"
                               asp-controller="Orders"
                               asp-action="AddItemToShoppingCart" asp-route-id="@Model.Id"><i class="bi bi-cart-plus"></i> Add to Cart (Price @Model.Price.ToString("c"))</a>*@
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>